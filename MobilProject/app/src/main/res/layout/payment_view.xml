<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <TextView
        android:id="@+id/pv_title"
        android:text="Add a new Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pv_txt_CostName"
        android:text="Name of the cost: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pv_title"/>
    <EditText
        android:id="@+id/pv_et_CostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pv_txt_CostName"/>
    <TextView
        android:id="@+id/pv_txt_Amount"
        android:text="Give the amount of money you spent: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pv_et_CostName"/>
    <EditText
        android:id="@+id/pv_et_Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pv_txt_Amount"/>
    <TextView
        android:id="@+id/pv_txt_Name"
        android:text="Who paid?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pv_et_Amount"/>
    <Spinner
        android:id="@+id/pv_spinner_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pv_txt_Name"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_below="@+id/pv_spinner_names"/>

    <Button
        android:id="@+id/btn_Add_Payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Payment"
        android:layout_below="@id/pv_spinner_names"
        android:layout_toRightOf="@id/btn_cancel" />
</RelativeLayout>